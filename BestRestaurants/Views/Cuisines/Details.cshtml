@{
	Layout = "_Layout";
}

@using BestRestaurants.Models;


@if (Model.Count == 0)
{
	<p>No @ViewBag.CuisineName restaurants of this kind in your area :(</p>
}
else
{
	
<h3>Details on @Model[0].Cuisine.Name :</h3>

<p>@Model[0].Cuisine.Description</p>

<h3>Restaurants serving @Model[0].Cuisine.Name</h3>

<ul>
@foreach (Restaurant restaurant in Model)
{
	<li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId}) | @restaurant.PriceRange</li>
}
</ul>
}

<p>@Html.ActionLink("Edit this Cuisine", "Edit", new {id = ViewBag.CuisineId })</p>
<p>@Html.ActionLink("Delete this Cuisine", "Delete", new {id = ViewBag.CuisineId })</p>
<p>@Html.ActionLink("Add new Cuisine", "Create")</p>
<p>@Html.ActionLink("See All Cuisines", "Index")</p>
<p>@Html.ActionLink("See All Restaurants", "Index", "Restaurants")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>
