@{
	Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Cuisine>;

<h2>Cuisines in your area:</h2>

@if (Model.Count == 0)
{
	<h4>There are no cuisines here :(</h4>
}

<ul>
@foreach (Cuisine cuisine in Model)
{
	<li>@Html.ActionLink($"{cuisine.Name}", "Details", new {id = cuisine.CuisineId})</li>
}
</ul>

<p>@Html.ActionLink("Add New Cuisine", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>
<p>@Html.ActionLink("See all Restaurants", "Index", "Restaurants")</p>
