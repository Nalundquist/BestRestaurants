@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h3>Edit this Restuarant: @Html.DisplayFor(model => model.Name)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RestaurantId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.EditorFor(model => model.Description)

  @Html.LabelFor(model => model.Location)
  @Html.EditorFor(model => model.Location)

  @Html.LabelFor(model => model.PriceRange)
  @Html.EditorFor(model => model.PriceRange)

	@Html.LabelFor(model => model.VeganFriendly)
  @Html.EditorFor(model => model.VeganFriendly)

	@Html.LabelFor(model => model.GlutenFree)
  @Html.EditorFor(model => model.GlutenFree)

  @Html.LabelFor(model => model.Cuisine)
  @Html.DropDownList("CuisineId")

  <input type="submit" value="Edit" />
}

<p>@Html.ActionLink("Back to Restaurants", "Index")</p>
<p>@Html.ActionLink("Check out Cuisines", "Index", "Cuisines")</p>



