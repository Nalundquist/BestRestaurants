@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h4> Add a new Restaurants </h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name )
  @Html.TextBoxFor(model => model.Name )

  @Html.LabelFor(model => model.Description )
  @Html.TextBoxFor(model => model.Description )

  @Html.LabelFor(model => model.PriceRange )
  @Html.TextBoxFor(model => model.PriceRange )

  @Html.LabelFor(model => model.Location )
  @Html.TextBoxFor(model => model.Location )

	@Html.LabelFor(model => model.VeganFriendly)
	@Html.CheckBoxFor(model => model.VeganFriendly)

	@Html.LabelFor(model => model.GlutenFree)
	@Html.CheckBoxFor(model => model.GlutenFree)


	@Html.DropDownList("CuisineId")

  <input type="submit" value="Add new restaurant" />
}
<p>@Html.ActionLink("Show all restaurants", "Index")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>
